{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",      
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["app/components/*"],    
      "@/api/*": ["app/api/*"],     
      "@/store/*": ["app/store/*"],    
      "@/shared/*": ["app/shared/*"]     
    },
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server/data/sql/migrate.ts"],
  "exclude": ["node_modules"]
}
